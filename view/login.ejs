<form onsubmit="formSubmitHandler(event)">
    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
            Email
        </label>
        <input onchange="setEmail(event)" 
               value="<%= email %>"
               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
               id="email"
               type="email"
               placeholder="Email"
        />
    </div>
    <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
            Password
        </label>
        <input onchange="setPassword(event)"
               value="<%= password %>"
               class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
               id="password"
               type="password"
               placeholder="Password"
        />
    </div>
    <div class="flex items-center justify-between">
        <button
            class="bg-orange-300 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            type="submit">
            Sign In
        </button>
        <a href="/" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
            Forgot Password?
        </a>
    </div>
</form>

<script>
    let email = '';
    let password = '';

    function setEmail(event) {
        email = event.target.value;
    }

    function setPassword(event) {
        password = event.target.value;
    }

    function formSubmitHandler(e) {
        e.preventDefault();

        if(email === "") {
            return alert("Email is required");
        }
        if(password === "") {
            return alert("Password is required");
        }

        console.log({ email, password });
    }
</script>
