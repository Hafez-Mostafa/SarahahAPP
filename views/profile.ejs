<%- include('./shared/header') %>

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 px-4 py-10">
  <div class="text-center w-full max-w-lg">
    <div class="mb-6">
      <p class="text-3xl font-bold text-gray-900"><%= session.userName %></p>
    </div>

    <div class="relative inline-block">
      <p id="trigger" class="text-white-600 cursor-pointer text-lg  mt-3  p-2 rounded-lg bg-sky-500 hover:bg-sky-700 hover:text-white">Share Profile</p>
      
      <div id="popup" class="hidden absolute top-full mt-2 left-1/2 transform -translate-x-1/2 bg-white p-4 border border-gray-300 rounded-lg shadow-lg w-72">
        <a target="_blank" href="<%=url%>/others/user/<%= session.userId %>" class="text-blue-500 hover:underline break-words">Link: <%=url%>/others/user/<%= session.userId %></a>
      </div>
    </div>

    <div class="w-full max-w-lg p-6 bg-white rounded-lg shadow-lg mt-8">
      <% if (messages && messages.length > 0) { %>
        <h3 class="text-2xl font-semibold text-gray-800 text-center mb-6">Your Messages</h3>
        <div>
          <% for(let i = 0; i < messages.length; i++) { %>
            <div class="mb-4 p-4 bg-gray-100 rounded-lg shadow-md">
              <p class="text-gray-700"><%= messages[i].content %></p>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <h3 class="text-2xl font-semibold text-gray-800 text-center mb-6">You don't have any messages</h3>
      <% } %>
    </div>
  </div>
</div>

<%- include('./shared/footer') %>


